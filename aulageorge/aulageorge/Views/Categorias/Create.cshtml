@model aulageorge.Models.Categoria

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>       <!-- Importação do JS -->
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    @using (Html.BeginForm()){<!-- Define que esta página representa um formulário HTML e que irá submeter ao
                               servidor uma action com o mesmo nome Create mas utilizando o método de
                               solicitação POST do HTTP.-->
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Categoria</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })<!-- Apresenta um resumo de todos os erros de validação que ocorrerem no
                                                                          momento da submissão do formulário-->
    <div class="form-group">
        @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })<!-- Apresenta o erro de validação que ocorrer no momento da submissão, de
                                                                                                    forma individiualizada-->
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Criar Categoria" class="btn btn-default" />
        </div>
    </div>
</div>
    }

    <div>
        @Html.ActionLink("Retornar para lista", "Index")
    </div>
</body>
</html>
